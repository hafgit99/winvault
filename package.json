{
  "name": "winvault-desktop",
  "version": "2.0.1",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "description": "Güvenli Masaüstü Şifre Yöneticisi",
  "author": "WinVault Team",
  "license": "Proprietary",
  "dependencies": {
    "hash-wasm": "^4.12.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.263.1",
    "otpauth": "^9.1.4",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.9",
    "zustand": "^5.0.9"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "trim-newlines": "^3.0.1",
    "semver": "^7.5.2"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://127.0.0.1:4000 && cross-env ELECTRON_START_URL=http://127.0.0.1:4000 electron .\"",
    "electron:build": "npm run build && electron-builder -w",
    "test": "vitest"
  },
  "build": {
    "appId": "com.winvault.app",
    "productName": "WinVault",
    "extends": null,
    "asar": true,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraFiles": [
      "LICENSE"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "license": "EULA.txt",
      "unicode": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-virtualized-auto-sizer": "^1.0.1",
    "@types/react-window": "^1.8.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "latest",
    "electron-builder": "^24.4.0",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.17",
    "wait-on": "^7.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
