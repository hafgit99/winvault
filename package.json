{
  "name": "winvault-desktop",
  "version": "2.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "description": "Güvenli Masaüstü Şifre Yöneticisi",
  "author": "WinVault Team",
  "license": "Proprietary",
  "dependencies": {
    "hash-wasm": "^4.12.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.263.1",
    "otpauth": "^9.1.4",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.9",
    "sharp": "^0.34.5",
    "zustand": "^5.0.9"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "trim-newlines": "^3.0.1",
    "semver": "^7.5.2"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://127.0.0.1:4000 && cross-env ELECTRON_START_URL=http://127.0.0.1:4000 electron .\"",
    "electron:build": "npm run build && electron-builder -w",
    "build:linux": "npm run build && electron-builder -l",
    "build:linux:x64": "npm run build && electron-builder -l --x64",
    "build:linux:arm64": "npm run build && electron-builder -l --arm64",
    "build:linux:appimage": "npm run build && electron-builder -l --AppImage",
    "build:linux:deb": "npm run build && electron-builder -l --deb",
    "test": "vitest"
  },
  "build": {
    "appId": "com.winvault.app",
    "productName": "WinVault",
    "extends": null,
    "asar": true,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraFiles": [
      "LICENSE"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "license": "EULA.txt",
      "unicode": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build-assets/icons/linux/",
      "category": "Utility",
      "maintainer": "WinVault Team <sales@hetech-me.space>",
      "vendor": "WinVault",
      "synopsis": "Secure Desktop Password Manager",
      "description": "WinVault is a zero-knowledge, military-grade encrypted password manager",
      "desktop": {
        "Name": "WinVault",
        "GenericName": "Password Manager",
        "Comment": "Secure Desktop Password Manager",
        "Categories": "Utility;Security;",
        "Keywords": "password;security;manager;vault;encryption;"
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "artifactName": "${productName}_${version}_${arch}.${ext}",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-virtualized-auto-sizer": "^1.0.1",
    "@types/react-window": "^1.8.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "latest",
    "electron-builder": "^24.4.0",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.17",
    "wait-on": "^7.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
